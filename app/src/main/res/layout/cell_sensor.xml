<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/cell_sensor_frame_top"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sensor_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_rounded"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/sensor_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:gravity="center"
                    android:maxHeight="800dp"
                    android:padding="2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_humidity" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sensor_names"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sensor_mode"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#0D3650"
                    android:gravity="center"
                    android:paddingVertical="3dp"
                    android:paddingLeft="5dp"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:text="Humedad relativa"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sensor_medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#225879"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="Altura"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:paddingVertical="3dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/cell_sensor_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0D3650"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="#154968"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    >

                    <TextView
                        android:id="@+id/sensor_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:autoSizeMaxTextSize="22sp"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:lines="1"
                        android:padding="5dp"
                        android:text="255.1ºC"
                        android:textAlignment="center"
                        android:textColor="#57D24B"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cell_sensor_details"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:background="#1E7691"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="5">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                        <LinearLayout
                            android:id="@+id/sensor_max_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sensor_max"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="25%"
                                android:textSize="12sp"
                                android:paddingLeft="5dp"
                                android:layout_weight="5"
                                android:gravity="left"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Max"
                                android:paddingLeft="5dp"
                                android:layout_weight="4"
                                android:textSize="12sp"
                                android:gravity="left"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sensor_optimum_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sensor_optimum"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="25%"
                                android:textSize="12sp"
                                android:paddingLeft="5dp"
                                android:layout_weight="5"
                                android:gravity="left"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Óptimo"
                                android:layout_weight="4"
                                android:textSize="12sp"
                                android:paddingLeft="5dp"
                                android:gravity="left"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sensor_min_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sensor_min"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="25%"
                                android:textSize="12sp"
                                android:paddingLeft="5dp"
                                android:layout_weight="5"
                                android:gravity="left"
                                android:textColor="@color/white"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Min"
                                android:paddingLeft="5dp"
                                android:layout_weight="4"
                                android:textSize="12sp"
                                android:gravity="left"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/cell_sensor_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="4dp" />


</LinearLayout>