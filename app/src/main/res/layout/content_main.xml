<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/content_main"
    android:gravity="center"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="18dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".app.main.MainActivity"
    android:background="#0F2B4D">

    <LinearLayout
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_marginTop="70dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/btn_to_fields"
            android:background="@null"
            android:src="@drawable/ic_home_button"
            android:padding="18dp"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />


        <ImageButton
            android:id="@+id/main_expand_btn"
            android:background="@drawable/btn_rounded_green_login"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_expand_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/main_more_options"
        android:visibility="gone"
        android:gravity="center_horizontal"
        android:layout_weight="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:text="Riego"
                android:id="@+id/main_irrigation_btn"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_weight="2"
                android:background="#878787"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="18dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/main_binnacle_btn"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="BitÃ¡cora"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="#878787"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

